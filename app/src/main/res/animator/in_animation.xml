<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

	<objectAnimator
		android:duration="0"
		android:propertyName="alpha"
		android:valueFrom="1.0"
		android:valueTo="0" />

	<objectAnimator
		android:duration="@integer/counter_animation_length"
		android:propertyName="rotationX"
		android:valueFrom="-90"
		android:valueTo="0"
		android:startOffset="@integer/counter_animation_length"/>

	<objectAnimator
		android:duration="0"
		android:propertyName="alpha"
		android:startOffset="@integer/counter_animation_length"
		android:valueFrom="0.0"
		android:valueTo="1.0" />
</set>